{
  "name": "aerie-timeline",
  "version": "1.0.0",
  "description": "Tools for representing and manipulating aerie simulation results",
  "type": "module",
  "exports": "./build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "build": "rm -rf build; tsc",
    "reformat": "npx prettier -w .",
    "test": "jest"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.4",
    "pg": "^8.11.3",
    "@types/pg": "^8.10.2"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^17.0.21",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["./test/setup/jest.setup.ts"],
    "transform": {
      "^.+\\.m?[tj]sx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [".ts"],
    "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"]
  }
}
